<!-- Top Navbar-->
<div class="navbar">
  <div class="navbar-inner">
    <% back_path = back_path(@path) %>
    <% if back_path %>
      <div class="left">
        <a href="<%= url_for_path(back_path) %>" class="back link" data-forceUrl="true">
          <i class="icon icon-back"></i>
          <span><%= File.basename(back_path) %></span>
        </a>
      </div>
    <% end %>
    <div class="center sliding"><%= @name %></div>
  </div>
</div>
<div class="pages">
  <!-- Page, data-page contains page name-->
  <div data-page="play" class="page">
    <!-- Scrollable page content-->
    <div class="page-content">
      <div class="content-block">
        <div class="content-block-inner">
          <p>"<%= @name %>" is now playing on your Apple TV.</p>
        </div>
      </div>
    </div>
  </div>
</div>